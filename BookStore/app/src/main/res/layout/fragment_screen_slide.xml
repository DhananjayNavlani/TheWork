<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenSlideFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/booksRv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_author_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/image_author"
            app:layout_constraintStart_toStartOf="@+id/image_author"
            app:layout_constraintTop_toBottomOf="@+id/image_author" />

        <TextView
            android:id="@+id/label_date_of_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Date of birth:"
            app:layout_constraintStart_toEndOf="@+id/image_author"
            app:layout_constraintTop_toTopOf="@+id/image_author" />

        <TextView
            android:id="@+id/label_citizenship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Citizenship:"
            app:layout_constraintStart_toEndOf="@+id/image_author"
            app:layout_constraintTop_toBottomOf="@+id/label_date_of_birth" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="label_about_author"
            tools:layout_editor_absoluteY="192dp" />

        <TextView
            android:id="@+id/label_about_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="About the Author"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_author_name" />

        <TextView
            android:id="@+id/text_citizenship_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/label_citizenship"
            app:layout_constraintStart_toEndOf="@+id/label_citizenship"
            app:layout_constraintTop_toTopOf="@+id/label_citizenship"
            tools:text="India" />

        <TextView
            android:id="@+id/text_dob_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/label_date_of_birth"
            app:layout_constraintStart_toEndOf="@+id/label_date_of_birth"
            app:layout_constraintTop_toTopOf="@+id/label_date_of_birth"
            tools:text="11 July 1956" />

        <TextView
            android:id="@+id/label_author_died"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Died:"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/image_author"
            app:layout_constraintTop_toBottomOf="@+id/label_citizenship"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/text_author_death_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/label_author_died"
            app:layout_constraintStart_toEndOf="@+id/label_author_died"
            app:layout_constraintTop_toTopOf="@+id/label_author_died"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/text_about_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_about_author"
            tools:text="@string/bio_amitav_ghosh" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/booksRv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:listitem="@layout/book_view" />

</androidx.constraintlayout.widget.ConstraintLayout>